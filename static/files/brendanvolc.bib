	keywords = {Fluid inclusions, CO, Mantle, Stromboli volcano, Ultramafic cumulates, δC},
	pages = {95--103},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\c56820bm\\Zotero\\storage\\H5BY4PM6\\Gennaro et al. - 2017 - Carbon isotope composition of CO2-rich inclusions .pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\c56820bm\\Zotero\\storage\\KQCMKE66\\S0377027317301981.html:text/html}
